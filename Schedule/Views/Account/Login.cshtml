@{
    Layout = "_AccountLayout";
}

<div class="login block">
    <div class="head">
        <div class="back-btn">
            <a href="@Url.Action("Index", "Home", new {viewType="Месяц", Faculty = "", Course = "", Group = ""})">
                <button class="back-button" title="На главную">
                    <svg aria-hidden="true" focusable="false" width="10" height="10" viewBox="0 0 10 10"></svg>
                </button>
            </a>
        </div>
        <div class="title"><h3>Вход в личный кабинет</h3></div>
    </div>
    <form method="post" class="form">
        <div class="mail-inp">
            <span>Почта:</span>
            <div>
                <input type="text" name="Mail">
            </div>
        </div>
        <div class="pass-inp">
            <span>Пароль:</span>
            <div>
                <input type="password" name="Password">
            </div>
        </div>
        <div class="buttons">
            <div class="checkbox">
                <input type="checkbox" id="checkbox-id" name="Remember"/>
                <label for="checkbox-id">Запомнить меня</label>
            </div>
            <div class="restore-btn">
                <a href="@Url.Action("Restore", "Account")">
                    <p>Забыли пароль?</p>
                </a>
            </div>
            <div class="login-btn">
                <a href="@Url.Action("Index", "Account")">
                    <button type="submit" class="login-button">Войти</button>
                </a>
            </div>
            <div class="register-btn">
                <a href="@Url.Action("Register", "Account")">
                    <p>Зарегистрироваться</p>
                </a>
            </div>
        </div>
    </form>
</div>